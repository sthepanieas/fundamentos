#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

float Volcilindro (float r, float a);

int main()
{
	float volumen, radio, altura;
	cout<<"Imgrese el radio: "<<endl;
	cin>> radio;
	cout<<"Ingrese la altura: "<<endl;
	cin>> altura;

	volumen=Volcilindro(radio, altura);

	cout<<"El volumen es: "<<volumen;

getch();
return 0;
}

float Volcilindro(float r, float a)
{
	float vol, pi=3.141516;
	vol= pi*r*r*a;
	return vol;

}
