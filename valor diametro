#include <iostream>
using namespace std;
int main()
{
    float d,r,A,V,P,pi;
    cout <<"Ingrese el valor del diamentro" << endl;
    cin >> d;
    
    r=d/2;
    pi=3.1416;
    
    P=2*pi*r;
    A=4*pi*(r*r);
    V=(3*pi*(r*r*r)/4);
    
    cout << "El perimetro de la circunferencia es:" << endl;
    cout << P << endl; 
    cout << "El aerea de la esfera es:" << endl;
    cout << A << endl; 
    cout << "El volumen es:" << endl;
    cout << V << endl; 
    
    return 0;
}
